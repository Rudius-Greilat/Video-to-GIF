<!-- res/drawable/button_reflective_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景填充 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" /> <!-- 按钮主体颜色 -->
            <corners android:radius="30dp" />   <!-- 圆角半径 -->
        </shape>
    </item>

    <!-- 边缘光滑反射效果 -->
    <item android:right="8dp" android:left="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FF6200EE"
                android:endColor="#80000000"
                android:angle="180" />
            <corners android:radius="30dp" />       <!-- 保持边框圆角一致 -->
            <stroke android:width="2dp" android:color="#80000000" /> <!-- 边框线 -->
        </shape>
    </item>
</layer-list>
