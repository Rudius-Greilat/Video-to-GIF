<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- 顶部状态栏 -->
    <TextView
        android:id="@+id/top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:translationY="-20dp"
        android:background="@drawable/square"
        android:elevation="50dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/fzhzgbjw"/>

    <!-- 底部状态栏 -->
    <TextView
        android:id="@+id/bottom_status_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:translationY="20dp"
        android:background="@drawable/square"
        android:elevation="50dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/bottom_status_text"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/fzhzgbjw"/>

    <!-- 中间按钮区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_status_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/top_status_bar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btn_camera"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:background="@drawable/square"
            android:elevation="50dp"
            android:text="相  机"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintBottom_toTopOf="@id/btn_record"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:drawableTop="@drawable/camera"
            android:drawablePadding="-20dp"/>

        <Button
            android:id="@+id/btn_album"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/square"
            android:elevation="50dp"
            android:text="图库"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.214"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableTop="@drawable/album"
            android:drawablePadding="-5dp"/>

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/square"
            android:elevation="50dp"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableTop="@drawable/settings"
            android:drawablePadding="-5dp"/>

        <Button
            android:id="@+id/btn_record"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="110dp"
            android:background="@drawable/square"
            android:elevation="50dp"
            android:text="记录"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.788"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableTop="@drawable/records"
            android:drawablePadding="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
