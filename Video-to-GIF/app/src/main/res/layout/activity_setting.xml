<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/square"
        android:elevation="50dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:translationY="-20dp"
        tools:ignore="MissingConstraints">

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/returnback"
            android:paddingTop="10dp" />
        <!-- 顶部状态栏 -->
        <TextView
            android:id="@+id/top_status_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="-55dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Video-Setting"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <!-- Video Preview -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />


    <!-- Start Time Slider -->
    <TextView
        android:id="@+id/start_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起始时间:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/playerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/start_time_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="1000"
        app:layout_constraintTop_toBottomOf="@+id/start_time_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- End Time Slider -->
    <TextView
        android:id="@+id/end_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/start_time_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/end_time_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="1000"
        app:layout_constraintTop_toBottomOf="@+id/end_time_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Frame Rate Slider -->
    <TextView
        android:id="@+id/frame_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帧率: 30 FPS"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/end_time_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/frame_rate_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="60"
        app:layout_constraintTop_toBottomOf="@+id/frame_rate_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Resolution Slider -->
    <TextView
        android:id="@+id/resolution_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分辨率: 500x500"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/frame_rate_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <SeekBar
        android:id="@+id/resolution_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="1000"
        app:layout_constraintTop_toBottomOf="@+id/resolution_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- Generate GIF Button -->
    <Button
        android:id="@+id/generate_gif_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:text="生成 GIF"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/fzhzgbjw"
        app:layout_constraintTop_toBottomOf="@+id/resolution_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Progress Dialog -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/generate_gif_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>