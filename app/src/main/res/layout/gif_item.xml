<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_square"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="@drawable/item_border">

    <!-- 视频缩略图 -->
    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_video_placeholder"
        android:contentDescription="Video Thumbnail"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/item_border"/>

    <!-- 视频文件名 -->
    <TextView
        android:id="@+id/video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GIF Name"
        android:gravity="start"
        android:textSize="12sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/video_thumbnail"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"/>

    <!-- 视频大小 -->
    <TextView
        android:id="@+id/video_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="000Mb"
        android:gravity="start"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/video_thumbnail"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"/>

    <!-- 视频选中标记 -->
    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_check_circle"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginEnd="15dp"/>

    <!-- 视频选中标记 -->
    <ImageView
        android:id="@+id/uncheckmark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_check_circle_bg"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>