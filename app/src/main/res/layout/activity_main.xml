<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000" />

    <!-- 顶部状态栏 -->
    <TextView
        android:id="@+id/top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationY="-20dp"
        android:background="@drawable/square"
        android:elevation="100dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/fzhzgbjw"/>

    <!-- 底部状态栏 -->
    <TextView
        android:id="@+id/bottom_status_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:translationY="10dp"
        android:background="@drawable/square"
        android:elevation="100dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/fzhzgbjw"/>

    <!-- 中间按钮区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_status_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/top_status_bar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btn_camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/square"
            android:elevation="100dp"
            android:text="相  机"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.31"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:drawableTop="@drawable/camera"
            android:drawablePadding="-20dp" />

        <Button
            android:id="@+id/btn_album"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/square"
            android:elevation="100dp"
            android:text="图 库"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:drawableTop="@drawable/album"
            android:drawablePadding="0dp"/>

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/square"
            android:elevation="100dp"
            android:text="设 置"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:drawableTop="@drawable/settings"
            android:drawablePadding="0dp"/>

        <Button
            android:id="@+id/btn_crop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/square"
            android:elevation="100dp"
            android:text="裁 剪"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/fzhzgbjw"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:drawableTop="@drawable/crop"
            android:drawablePadding="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
